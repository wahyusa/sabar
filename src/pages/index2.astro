---
import HomeLayout from "../layouts/HomeLayout.astro";
// import dummy articles.json
import articles from "../dummy/articles.json";
---

<HomeLayout pageTitle="Home Design v1">
  <div class="bg-surface min-h-screen">
    <div class="mx-auto min-h-screen max-w-[90%] bg-white sm:px-8">
      <div
        class="mx-auto grid grid-cols-12 items-start gap-4 lg:max-w-screen-md"
      >
        <header
          class="order-1 col-span-12 flex flex-col gap-y-4 px-4 py-10 md:px-0"
        >
          <div class="flex items-start justify-between">
            <div>
              <h1 class="text-xl font-bold">SABAR</h1>
              <p class="text-lg/7 font-light text-[var(--mauve-11)]">
                Berbagi Wawasan dan Pengalaman Seputar Teknologi
              </p>
            </div>
            <ul class="flex items-center gap-x-4">
              <li>
                <a href="#!">
