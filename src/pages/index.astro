---
import HomeLayout from "../layouts/HomeLayout.astro";
import Article from "../components/Article.astro";
---

<HomeLayout>
  <!-- MAIN START -->
  <main class="mx-auto max-w-prose bg-white">
    <!-- ARTICLE LIST START -->
    <section class="mx-auto max-w-prose">
      <!-- ARTICLE LOOP START -->
      <Article
        time="24 Feb 2024 | 26-02-2024 | 3 hours ago"
        title="Basic Minimal Golang Development Environment Setup in Windows"
        link="#!"
      />
      <Article
        time="24 Feb 2024 | 26-02-2024 | 1 days ago"
        title="Build CLI apps with Golang"
        link="#!"
      />
      <Article
        time="24 Feb 2024 | 26-02-2024 | 2 days ago"
        title="How to Structure Golang Project for Beginner"
        link="#!"
      />
      <!-- ARTICLE LOOP END -->
    </section>
    <!-- ARTICLE LIST END -->
  </main>
  <!-- MAIN END -->
  <!-- STUPID 100DVH DIV TO TEST TOP NAV STICKY -->
  <div class="min-h-dvh"></div>
  <script is:inline>
    let prevScrollpos = window.scrollY;
    const header = document.getElementsByTagName("header")[0];

    window.onscroll = function () {
      let currentScrollPos = window.scrollY;
      if (prevScrollpos > currentScrollPos) {
        header.style.top = "0";
      } else {
        header.style.top = "-68px"; // Adjust this value to match the height of your header
      }
      prevScrollpos = currentScrollPos;
    };
  </script>
</HomeLayout>
